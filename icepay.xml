<?xml version="1.0" encoding="UTF-8"?>
<extension method="upgrade" group="vmpayment" type="plugin" version="2.5">
	<name>ICEPAY Payment Module</name>
	<creationDate>July 2015</creationDate>
	<author>ICEPAY B.V.</author>
	<authorUrl>http://www.icepay.com</authorUrl>
	<copyright>(c) 2015 ICEPAY. All rights reserved.</copyright>
	<license>BSD-2-Clause, see LICENSE.md</license>
	<version>1.0.0</version>

	<description>
		<![CDATA[
			Make payments in your VirtueMart 3 webshop possible with <a href="http://www.icepay.com/" target="_blank">ICEPAY</a>.
			This VirtueMart 3 webshop module will be able to offer the most frequently used national and international online payment methods.
		]]>
	</description>

	<files>
		<!-- All other files will be handled by VirtueMart 3 -->
		<folder>icepay</folder>
		<filename plugin="icepay">icepay.php</filename>
	</files>

	<vmconfig>
		<fields name="params">
			<fieldset name="payment" addfieldpath="/plugins/vmpayment/icepay/icepay/fields">
				<field type="vmtitle" description="" default="ICEPAY Configuration" />
				<field type="text" name="merchantid" description="Your ICEPAY Merchant ID" default="" label="ICEPAY Merchant ID" size="50" required="true" filter="integer" />
				<field type="text" name="secretcode" description="Your ICEPAY Secretcode" default="" label="ICEPAY Secretcode" size="50" required="true" />
				<field type="note" name="postback" level="level1" label="ICEPAY Postback URL" size="50" />
				<field type="postbackurl" level="level1" />
				<field type="vmtitle" description="" default="Payment statuses" />
				<field type="note" name="paymentnote" label="" description="Leave these statuses as default if you do not know what your doing." size="50" />
				<field name="status_pending" type="vmorderstate" scope="com_virtuemart" default="P" label="Pending" />
				<field name="status_success" type="vmorderstate" scope="com_virtuemart" default="C" label="Success" />
				<field name="status_canceled" type="vmorderstate" scope="com_virtuemart" default="X" label="Cancel" />
				<field name="status_refunded" type="vmorderstate" scope="com_virtuemart" default="R" label="Refund" />
				<field name="status_chargeback" type="vmorderstate" scope="com_virtuemart" default="R" label="Chargeback" />
			</fieldset>
		</fields>
	</vmconfig>
	<updateservers>
		<server type="extension" name="VirtueMart plg_vmpayment_icepay Update Site"><![CDATA[https://raw.githubusercontent.com/icepay/VirtueMart-3/master/version.xml]]></server>
	</updateservers>
</extension>